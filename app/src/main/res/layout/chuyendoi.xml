

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp">

<TextView
    android:id="@+id/textViewFahrenheit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Độ F"
    android:textSize="18sp"
    android:textColor="#FF5722"/>

<EditText
    android:id="@+id/doF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal"/>

<TextView
    android:id="@+id/textViewCelsius"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Độ C"
    android:textSize="18sp"
    android:textColor="#4CAF50"/>

<EditText
    android:id="@+id/doC"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal"/>

<!-- LinearLayout ngang chứa hai nút chuyển đổi -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_marginTop="16dp">

    <Button
        android:id="@+id/btnFsangC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Chuyển đổi sang độ C" />

    <Button
        android:id="@+id/btnCsangF"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Chuyển đổi sang độ F" />
</LinearLayout>

<Button
    android:id="@+id/btnClear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="XÓA"
    android:background="@color/purple_200"
    android:layout_marginTop="16dp"/>
</LinearLayout>